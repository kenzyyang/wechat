.header {
  width: 100%;
  height: 540rpx;
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-wrap: wrap;
}

.header .user-info {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin-top: 150rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.header .wave {
  position: absolute;
  width: 100%;
  top: 450rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.header .userNickName {
  width: 100%;
  height: 35rpx;
  text-align: center;
  margin-top: -110rpx;
}
